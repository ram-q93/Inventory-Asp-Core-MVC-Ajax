@model Inventory_Asp_Core_MVC_Ajax.Models.Classes.SupplierModel
@{
    ViewData["Title"] = "Edit";
    Layout = null;
}

<div class="row">
    <div class="col-md-12">
        <form asp-controller="Supplier" asp-action="AddOrEditSupplier" 
              onsubmit="return jQueryAjaxPostToAddOrEditSupplier(this);" autocomplete="off">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" type="text" class="form-control">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Phone" class="control-label"></label>
                    <input asp-for="Phone" type="text" class="form-control">
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="EmergencyMobile" class="control-label"></label>
                    <input asp-for="EmergencyMobile" type="text" class="form-control">
                    <span asp-validation-for="EmergencyMobile" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Enabled" class="control-label"></label>
                    <input asp-for="Enabled" type="checkbox" class="form-control">
                    <span asp-validation-for="Enabled" class="text-danger"></span>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-12">
                    <label asp-for="Address" class="control-label"></label>
                    <textarea asp-for="Address" class="form-control" rows="2"> </textarea>
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-success text-white btn-lg btn-block" />
            </div>
        </form>
    </div>
</div>


@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}