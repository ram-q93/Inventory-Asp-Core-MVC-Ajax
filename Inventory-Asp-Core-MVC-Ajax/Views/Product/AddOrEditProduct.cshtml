@model Inventory_Asp_Core_MVC_Ajax.Models.Classes.ProductModel
@{
    ViewData["Title"] = "Edit";
    Layout = null;
}

<div class="row">
    <div class="col-md-12">
        <form asp-controller="Product" asp-action="AddOrEditProduct"
              onsubmit="return jQueryAjaxPostToAddOrEditProduct(this);" autocomplete="off">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            @*<input type="hidden" asp-for="StorageId" />
        <input type="hidden" asp-for="@Model.ImageModel" />*@
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" type="text" class="form-control">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Code" class="control-label"></label>
                    <input asp-for="Code" type="text" class="form-control">
                    <span asp-validation-for="Code" class="text-danger"></span>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-4">
                    <label asp-for="UnitePrice" class="control-label"></label>
                    <input asp-for="UnitePrice" type="checkbox" class="form-control">
                    <span asp-validation-for="UnitePrice" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="Quantity" class="control-label"></label>
                    <input asp-for="Quantity" type="number" class="form-control">
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="Enabled" class="control-label">Status</label>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <input type="radio" asp-for="Enabled" id="active" value="true">
                            <label for="active">Active</label>
                        </div>
                        <div class="form-group col-md-6">
                            <input type="radio" asp-for="Enabled" id="deactive" value="false">
                            <label for="deactive">Deactive</label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-12">
                    <label asp-for="Description" class="control-label"></label>
                    <textarea asp-for="Description" class="form-control" rows="2"> </textarea>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-4">
                    <label class="control-label">Category</label>
                    <select id="list" asp-for="CategoryId" class="form-control"></select>
                </div>
                <div class="form-group col-md-4">
                    <label class="control-label">Supplier</label>
                    <select id="list" asp-for="SupplierId" class="form-control"></select>
                </div>
                <div class="form-group col-md-4">
                    <label class="control-label">Storage</label>
                    <select id="list" asp-for="StorageId" class="form-control"></select>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-4">
                    <label asp-for="ProductPicture" class="control-label"></label>
                    <div class="custom-file">
                        <input asp-for="ProductPicture" class="custom-file-input" id="customFile"
                               onchange="loadImageFile(event)">
                        <label class="custom-file-label" for="customFile">Choose picture...</label>
                    </div>
                    <span asp-validation-for="ProductPicture" class="text-danger"></span>
                </div>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-success text-white btn-lg btn-block" />
            </div>
        </form>
        <img id="output-image" />

        <script src="@Url.Content("~/lib/jquery-validation/dist/jquery.validate.min.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

    </div>
</div>

<script>
    $(document).ready(function () {
        $.ajax({
            method: "GET",
            url: "/supplier/supplier-select-list",
            dataType: "json",
            success: function (data) {
                var s = '<option value="0">-- Please select supplier --</option>';
                console.log(data);
                for (var i = 0; i < data.length; i++) {
                    s += '<option value="' + data[i].id + '">' + data[i].name + '</option>';
                }
                console.log(s);
                $("#list").html(s);
            }
        })
    })

    var loadImageFile = function (event) {
        var output = document.getElementById('output-image');
        output.src = URL.createObjectURL(event.target.files[0]);
        output.onload = function () {
            URL.revokeObjectURL(output.src) // free memory
        }
    };
</script>

