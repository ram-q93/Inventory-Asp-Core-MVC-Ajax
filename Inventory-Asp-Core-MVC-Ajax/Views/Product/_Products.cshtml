@model IEnumerable<Inventory_Asp_Core_MVC_Ajax.Models.Classes.ProductModel>

@*For displaying product info*@
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Product Table</h6>
    </div>
    <div class="card-body">
        <table class="table table-bordered table-sm table-hover table-condensed"
               id="table-product" width="100%" cellspacing="0" style="color: black;">
            @Html.AntiForgeryToken()

            <thead>
                <tr>
                    <th style="width: 10%">
                        <label asp-for="@Model.First().Name"></label>
                    </th>
                    <th style="width: 10%">
                        <label asp-for="@Model.First().Code"></label>
                    </th>
                    <th style="width: 10%">
                        <label asp-for="@Model.First().Quantity"></label>
                    </th>
                    <th style="width: 10%">
                        <label asp-for="@Model.First().UnitePrice"></label>
                    </th>
                    <th style="width: 4%">
                        <label>Status</label>
                    </th>
                    <th style="width: 10%">
                        <label asp-for="@Model.First().CategoryName"></label>
                    </th>
                    <th style="width: 10%">
                        <label asp-for="@Model.First().StorageName"></label>
                    </th>
                    <th style="width: 10%">
                        <label asp-for="@Model.First().SupplierCompanyName"></label>
                    </th>
                    <th style="width: 4%">
                        <label>Edit</label>
                    </th>
                    <th style="width: 4%">
                        <label>Delete</label>
                    </th>
                </tr>
            </thead>
        </table>
    </div>
</div>