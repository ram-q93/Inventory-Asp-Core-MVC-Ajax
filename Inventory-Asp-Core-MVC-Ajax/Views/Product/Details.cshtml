@model Inventory_Asp_Core_MVC_Ajax.Core.Classes.ProductDetailsModel
@{
    ViewData["Title"] = "Product Details";
    Layout = null;
    var product = Model;
    var category = Model.CategoryModel;
    var storage = Model.StorageModel;
    var supplier = Model.SupplierModel;
}


@* For displaying Product info*@
<dv>
    <div class="form-row">
        <div class="form-group col-md-3">
            <b>Product @Html.DisplayNameFor(m => product.Name)  : </b>
            @Html.DisplayFor(modelItem => product.Name)
        </div>
        <div class="form-group col-md-3">
            <b>@Html.DisplayNameFor(m => product.Code)  : </b>
            @Html.DisplayFor(modelItem => product.Code)
        </div>
        <div class="form-group col-md-3">
            <b>@Html.DisplayNameFor(m => product.Quantity)  : </b>
            @Html.DisplayFor(modelItem => product.Quantity)
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <b> @Html.DisplayNameFor(m => product.Enabled) : </b>
            @Html.DisplayFor(modelItem => product.Enabled)
        </div>
        <div class="form-group col-md-6">
            <b>@Html.DisplayNameFor(m => product.UnitePrice) : </b>
            @Html.DisplayFor(modelItem => product.UnitePrice)
        </div>
    </div>
    <div class="form-row">
        <b>@Html.DisplayNameFor(m => product.Description) : </b>
        @Html.DisplayFor(modelItem => product.Description)
    </div>
</dv>
<hr />

@* For displaying Category info*@
@if (category != null)
{
    <dv>
        <div class="form-row">
            <div class="form-group col-md-3">
                <b>
                    Category @Html.DisplayNameFor(model => category.Name)  :
                </b> @Html.DisplayFor(modelItem => category.Name)
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-12">
                <b>
                    Category @Html.DisplayNameFor(model => category.Description)  :
                </b> @Html.DisplayFor(modelItem => category.Description)
            </div>
        </div>
    </dv>
    <hr />
}

@* For displaying Storage info*@
@if (storage != null)
{
    <dv>
        <div class="form-row">
            <div class="form-group col-md-3">
                <b>Storage @Html.DisplayNameFor(model => storage.Name)  : </b>
                @Html.DisplayFor(modelItem => storage.Name)
            </div>
            <div class="form-group col-md-3">
                <b>
                    Storage @Html.DisplayNameFor(model => storage.Phone)  :
                </b> @Html.DisplayFor(modelItem => storage.Phone)
            </div>
            <div class="form-group col-md-3">
                <b>@Html.DisplayNameFor(model => storage.Address)  : </b>
                @Html.DisplayFor(modelItem => storage.Address)
            </div>
        </div>
    </dv>
    <hr />
}

@* For displaying Storage info*@
@if (supplier != null)
{
    <dv>
        <div class="form-row">
            <div class="form-group col-md-3">
                <b>
                    Supplier @Html.DisplayNameFor(model => supplier.CompanyName)  :
                </b> @Html.DisplayFor(modelItem => supplier.CompanyName)
            </div>
            <div class="form-group col-md-3">
                <b>
                    Supplier @Html.DisplayNameFor(model => supplier.Phone)  :
                </b> @Html.DisplayFor(modelItem => supplier.Phone)
            </div>
            <div class="form-group col-md-3">
                <b>
                    Supplier @Html.DisplayNameFor(model => supplier.EmergencyMobile)  :
                </b> @Html.DisplayFor(modelItem => supplier.EmergencyMobile)
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-3">
                <b>
                    Supplier @Html.DisplayNameFor(model => supplier.Enabled)  :
                </b> @Html.DisplayFor(modelItem => supplier.Enabled)
            </div>
            <div class="form-group col-md-3">
                <b>
                    @Html.DisplayNameFor(model => supplier.Address)  :
                </b> @Html.DisplayFor(modelItem => supplier.Address)
            </div>
        </div>
        <br />
        <br />
    </dv>
}


@if (@Model.ImageModel != null)
{
    <tr>
        <td>
            <figure class="figure">
                <img src="data:image/jpeg;base64,@(Model.ImageModel.Base64StringData)"
                     class="rounded mx-auto d-block img-fluid" alt="No image">
            </figure>
        </td>
    </tr>
}
