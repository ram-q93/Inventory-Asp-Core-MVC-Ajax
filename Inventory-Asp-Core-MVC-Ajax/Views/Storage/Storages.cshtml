@model IEnumerable<Inventory_Asp_Core_MVC_Ajax.Models.Classes.StorageModel>

@{
    ViewData["Title"] = "Storages";
}
<div class="container-fluid">
    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">
            <a asp-controller="Storage" asp-action="Storages">@ViewData["Title"]</a>
        </h1>

        <ul class="navbar-nav ml-auto">


            <div class="topbar-divider d-none d-sm-block">
            
                <a class="d-none d-sm-inline-block btn  btn-success shadow-sm"
                   onclick="showStorageInPopup('0', 'New Storage')">
                    <span class="icon text-white">
                        <i class="fas fa-plus"></i>
                    </span>
                    <span class="text text-white">&nbsp;&nbsp;New Storage</span>
                </a>

                <a href="#" class="d-none d-sm-inline-block btn  btn-primary shadow-sm">
                    <i class="fas fa-download fa-sm text-white"></i> Generate Report
                </a>
            </div>

        </ul>
    </div>
    <br />
    <div id="view-all-storages">
        @await Html.PartialAsync("_Storages", Model)
    </div>
</div>

<div class="modal fade bd-example-modal-lg" id="form-modal" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg " role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

            </div>
        </div>
    </div>
</div>

