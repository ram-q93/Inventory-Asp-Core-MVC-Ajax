@model IList<Inventory_Asp_Core_MVC_Ajax.Core.Classes.ProductModel>
@{
    var Index = 1;
}

<!DOCTYPE html>
<html lang="en">
<head>
    Product Report
</head>
<body>
    @* For displaying products *@
    @if (Model.Count == 0)
    {
        <div class="alert alert-info">No Products Availale</div> }
    else
    {
        var FirstProduct = Model.First();

        <div class="container-fluid">
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            #
                        </th>
                        <th>
                            <label asp-for="@(FirstProduct.Name)"></label>
                        </th>
                        <th>
                            <label asp-for="@(FirstProduct.Quantity)"></label>
                        </th>
                        <th>
                            <label asp-for="@(FirstProduct.Enabled)"></label>
                        </th>
                        <th>
                            <label asp-for="@(FirstProduct.UnitePrice)"></label>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var p in Model)
                    {
                        <tr>
                            <td>
                                @(Index++)
                            </td>
                            <td>
                                @(p.Name)
                            </td>
                            <td>
                                @(p.Quantity)
                            </td>
                            <td>
                                @(p.Enabled)
                            </td>
                            <td>
                                @(p.UnitePrice)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>}
</body>
</html>




